#!/bin/sh

#shift;
if test "x$1" = x;
then
    versionfile=".version"
else
    versionfile=$1;
fi

cat $versionfile| sed 's/#.*$//g'|sed 's/\([^ ]*\)[\t ]*=[ \t]*\([^ ]*\)$/#define \1 \"\2\"/g' 
echo
if [ -z $CXX ]
then
    COMPILER=unknown
else
    COMPILER="$CXX `$CXX --version`"
fi

echo "#define COMPILER "\"$COMPILER\"
