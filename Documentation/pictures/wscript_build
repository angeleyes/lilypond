import TaskGen

TaskGen.declare_chain (
    name = 'pictures png',
    rule = 'ln -f ${SRC} ${TGT} ; echo ${TGT}; echo ${SRC}',
    ext_in = '.png',
    #ext_out = '.png',
    reentrant=0,
)


bld.new_task_gen(source='summary-gradient.png')



