  @}
  \paper @{
    linewidth = 80 * \staffspace;
    textheight = 200 * \staffspace;
    \translator @{
      \OrchestralScoreContext %%%%junkme
      skipBars = ##t
    @}
  @}
  \midi @{
    \tempo 4 = 75;
  @}
@}
@end example

